manifest:
  version: 1.0

automations:
  review_todo_comments:
    if:
      - {{ source.diff.files | matchDiffLines(regex=r/(TODO)|(todo)/) | some }}
    run: 
      - action: request-changes@v1
        args:
          comment: | 
                  This PR contains a TODO statement. Please check to see if they should be removed.
