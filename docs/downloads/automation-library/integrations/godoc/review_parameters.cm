
# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
  review_parameters: 
    if:  
       - {{ source.diff.files | match(attr='diff', regex=r/@param/) | nope }}
       - {{ source.diff.files | match(attr='diff', regex=r/func\s+\(.*\)/) | some }}
    run:
     - action: add-comment@v1
       args: 
         comment: | 
             This PR modifies method input parameters, but is missing godoc changes. Please check to ensure no godoc changes are necessary.

