manifest:
  version: 1.0

triggers:
  on:
    - commit
    - pr_created

automations:
  ask_ai_summarize:
    if:
      - {{ pr.labels | match(term="askai summarize") | some }}
    run:
      - action: add-comment@v1
        args:
          comment: |
            # ðŸ“œ PR Summary ðŸ“œ
            {{ source | askAI("Experienced developer",
              "Summarize the changes in this PR in bullet points.", env.OPEN_AI_TOKEN) }}