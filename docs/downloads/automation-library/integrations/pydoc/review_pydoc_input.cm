# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
  review_pydoc_input: 
    if:  
       - {{ source.diff.files | match(attr='diff', regex=r/Args:[\s\S]*?\([^)]*\):/) | nope }}
       - {{ source.diff.files | match(attr='diff', regex=r/def\s+\w+\s*\([^)]*\):/) | some }}
    run:
     - action: add-comment@v1
       args: 
         comment: | 
             This PR modifies method input parameters, but is missing Pydoc changes. Please check to ensure no Pydoc changes are necessary.
