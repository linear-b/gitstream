# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
  #Assign PRs that only affect Pydoc to the technical writing team and add docs label
  review_pydoc:
    if:
      - {{ source.diff.files | match(attr='diff', regex=r/'''[\s\S]*?'''/) | every }}
    run:
      - action: add-label@v1
        args:
            label: "ðŸ““ Pydoc Only"
            color: {{ colors.green }}
      - action: add-reviewers@v1
        args:
          reviewers: [org/tech-writers]
      - action: approve@v1

colors:
  green: '0e8a16'
